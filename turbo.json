{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",

  "globalEnv": ["BASE_URL", "BASE_API_URL", "NEXTAUTH_SECRET", "AWS_REGION", "AWS_ACCESS_KEY_ID", "AWS_SECRET_ACCESS_KEY", "AWS_S3_BUCKET_NAME", "ANALYZE", "NEXTAUTH_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "app/**", "components/**"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["^start"],
      "outputs": []
    }
  }
}
